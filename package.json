{
  "name": "airtable-plus",
  "version": "1.0.4",
  "description": "Airtable Node library designed for async/await with useful helper methods",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "mocha": "./node_modules/.bin/mocha",
    "test": "nyc --reporter text --reporter=lcovonly npm run mocha -- -R spec",
    "doc": "jsdoc2md --template build/README.hbs lib/*.js > README.md",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "lint": "./node_modules/.bin/eslint . --ext .js",
    "build": "npm run doc && npm run test",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/prompt"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/victorhahn/airtable-plus.git"
  },
  "keywords": [
    "airtable",
    "productivity",
    "database",
    "spreadsheet",
    "node",
    "async"
  ],
  "author": "Victor Hahn <vhahnwebdev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/victorhahn/airtable-plus/issues"
  },
  "homepage": "https://github.com/victorhahn/airtable-plus#readme",
  "dependencies": {
    "airtable": "^0.7.2",
    "camelcase-keys": "^5.0.0",
    "p-map": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/prompt": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "chai": "^4.2.0",
    "commitizen": "^3.0.7",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "husky": "^1.3.1",
    "istanbul": "^0.4.5",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "semantic-release": "^15.13.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
